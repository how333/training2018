

doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Edit Admin
    // CSS
    link(rel='stylesheet', href='/stylesheets/assets/bootstrap/css/font.css')
    link(rel='stylesheet', href='/stylesheets/assets/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/assets/font-awesome/css/font-awesome.min.css')
    link(rel='stylesheet', href='/stylesheets/assets/css/form-elements.css')
    link(rel='stylesheet', href='/stylesheets/assets/css/style.css')
  body
    // Top content
    .top-content
      .inner-bg
        .container
          .row
            .col-sm-8.col-sm-offset-2.text
              h1
                strong 编辑管理员
          .row
            .col-sm-3
              a.btn.btn-info(href='/super_admin/home', role='button') 返回
            .col-sm-6.form-box
              .form-top
                .form-top-left
                  h3 编辑管理员
                  
              .form-bottom
                form.login-form(role='form', action='update', method='post')

                  .form-group
                    label.sr-only(for='form-roll') Job Number
                    input#form-roll.form-roll.form-control(type='text', name='rollno', value=admin.rollno)

                  .form-group
                    label.sr-only(for='form-username') Username
                    input#form-username.form-username.form-control(type='text', name='username', value=admin.username)

                  .form-group
                    label.sr-only(for='form-password') Password
                    input#form-password.form-password.form-control(type='password', name='password', value=admin.password)
                  .form-group
                    label.sr-only(for='form-password') Previous
                    input#form-password.form-password.form-control(type='hidden', name='', value=admin.username)

                  button.btn(type='submit') 提交
            .col-sm-3
              a.btn.btn-info(href='../super_admin/logout', role='button') 退出
    // Javascript
    script(src='/stylesheets/assets/js/jquery-1.11.1.min.js')
    script(src='/stylesheets/assets/bootstrap/js/bootstrap.min.js')
    script(src='/stylesheets/assets/js/jquery.backstretch.min.js')
    script(src='/stylesheets/assets/js/scripts.js')
    //if lt IE 10
      script(src='assets/js/placeholder.js')

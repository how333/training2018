doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Change Faculty Password
    // CSS
    link(rel='stylesheet', href='/stylesheets/assets/bootstrap/css/font.css')
    link(rel='stylesheet', href='/stylesheets/assets/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/assets/font-awesome/css/font-awesome.min.css')
    link(rel='stylesheet', href='/stylesheets/assets/css/form-elements.css')
    link(rel='stylesheet', href='/stylesheets/assets/css/style.css')
  body
    // Top content
    .top-content
      .inner-bg
        .container
          .row
            .col-sm-8.col-sm-offset-2.text
              h1
                strong 个人密码修改
          .row
            .col-sm-3
              a.btn.btn-info(href='/faculties/home', role='button') 返回
            .col-sm-6.form-box
              .form-top
                .form-top-left
                  h3 请输入以下信息
                  
              .form-bottom
                form.login-form(role='form', action='password_change', method='post')
                  .form-group
                    label.sr-only(for='form-username') username
                    input#form-username.form-username.form-control(type='hidden', name='username',value=username)
                  .form-group
                    label.sr-only(for='form-password') password-old
                    input#form-password-old.form-password-old.form-control(type='password', name='passwordold', placeholder='旧密码...')
                  .form-group
                    label.sr-only(for='form-password') password-new
                    input#form-password-new.form-password-new.form-control(type='password', name='passwordnew', placeholder='新密码...')
                  .form-group
                    label.sr-only(for='form-password') password-new-agin
                    input#form-password-new-agin.form-password-new-agin.form-control(type='password', name='passwordnewagin', placeholder='再次输入新密码...')
                  button.btn(type='submit') 提交 
            .col-sm-3
              a.btn.btn-info(href='/faculties/logout', role='button') 退出
    // Javascript
    script(src='/stylesheets/assets/js/jquery-1.11.1.min.js')
    script(src='/stylesheets/assets/bootstrap/js/bootstrap.min.js')
    script(src='/stylesheets/assets/js/jquery.backstretch.min.js')
    script(src='/stylesheets/assets/js/scripts.js')
    //if lt IE 10
      script(src='assets/js/placeholder.js')
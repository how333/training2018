  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Learn Home

    script.
      var learn_flag;
      //var learn_record;
      var course;
      //var charpter;
      var username;
      var record_value;
      var selected_value = null;
      var content_type;
      //var current_record = record_value;
      //var record_old;
      //var clock = function() {
        //if(current_record == record_old) {
        //}
        //if(current_record != record_old) {
         // record_old = current_record;
        //}
      //}
      var new_win = function(flag) {
        //window.setInterval('clock()', 1000);
        learn_flag = flag;
        course = window.frames['ifrm'].courseid_son;
        selected_value = window.frames['ifrm'].selected_value_son;
        record_value = window.frames['ifrm'].record_value_son;
        username = window.frames['ifrm'].username_son;
        if(selected_value != null) {
          var obj = document.getElementById('Select_Content');
          content_type = obj.options[obj.selectedIndex].value;
          switch(content_type) {
            case 'document':
                      window.open('/learn/document'); break;
            case 'video':
                      window.open('/learn/video'); break;
            case 'operation':
                      window.open('/learn/operation'); break;
        }
      }
      }

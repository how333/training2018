  body
    // Top content
    .top-content
      .inner-bg
        .container
          .row
            .col-sm-8.col-sm-offset-2.text
              h1
                strong 请选择学习内容
          .row
            .col-sm-2
              a.btn.btn-info(href='/students/home', role='button') 返回
            .col-sm-8.form-box
              .form-bottom
                form.login-form(id='formLogin', role='form', action='learn_prepare', method='post', target='ifrm')

                  .col-sm-3
                    p 请选择课程
                    label.sr-only(for='Select_Course') Course
                    select(id='Select_Course',name = 'Select_Course',style = 'width: 120px')

                  .col-sm-3
                    p 请选择章节
                    label.sr-only(for='Select_Charpter') Charpter
                    select(id='Select_Charpter',name = 'Select_Charpter',style = 'width: 120px')

                  .col-sm-3
                    p 请选择内容
                    label.sr-only(for='Select_Content') Content
                    select(id='Select_Content',name = 'Select_Content',style = 'width: 120px')
                      option
                      option document
                      option video
                      option operation

                  .col-sm-3
                    .form-bottom
                      center
                        //<input type='submit' onclick='content_selected()' value='确定'>
                        button.btn(type='submit', style= 'width:80px; height:40px; line-height:40px; padding-left:20px; background:#666')确定

                .row
                  .col-sm-12
                    .form-bottom
                      //form.login-form(role='form', action='/learn/checkdoc', method='post')
                      iframe(src='/learn/document_list', name='ifrm', id='ifrm', width='100%', height='100%')

                .row
                  .col-sm-4.col-sm-offset-2
                    center
                      button.btn(onclick='new_win(1)', style='width:200px') 开始学习
                  .col-sm-4
                    center
                      button.btn(onclick='new_win(0)', style='width:200px') 继续学习

